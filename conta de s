#include <stdio.h>

int main() {
    int segundos, horas, minutos, resto;
    
    // Entrada do número de segundos
    printf("Digite um número inteiro de segundos: ");
    scanf("%d", &segundos);
    
    // Cálculo das horas, minutos e segundos restantes
    horas = segundos / 3600;
    resto = segundos % 3600;
    minutos = resto / 60;
    segundos = resto % 60;
    
    // Exibição dos resultados
    printf("\nEquivalente: %d horas, %d minutos e %d segundos\n", horas, minutos, segundos);
    
    return 0;
}
